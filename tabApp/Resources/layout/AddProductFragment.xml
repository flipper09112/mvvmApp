<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/scrollView2"
        app:layout_constraintStart_toStartOf="@+id/scrollView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Adicionar novo produto"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/arista_pro_bold"
        android:gravity="center"
        android:autoSizeMaxTextSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/productIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/profileicon"
                    app:layout_constraintBottom_toBottomOf="@+id/productName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/editLabel"/>

                <TextView
                    android:id="@+id/editLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:text="Nome do Produto"
                    android:fontFamily="@font/arista_pro_bold"
                    android:textSize="30sp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/productIcon"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/productName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="15dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/arista_pro_light"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:background="@drawable/containerretangle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/editLabel"
                    app:layout_constraintTop_toBottomOf="@+id/editLabel" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/referenceIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/profileicon"
                    app:layout_constraintBottom_toBottomOf="@+id/reference"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/editLabel1"/>

                <TextView
                    android:id="@+id/editLabel1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:text="Referencia"
                    android:fontFamily="@font/arista_pro_bold"
                    android:textSize="30sp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/referenceIcon"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/reference"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="15dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/arista_pro_light"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:background="@drawable/containerretangle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/editLabel1"
                    app:layout_constraintTop_toBottomOf="@+id/editLabel1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/unityIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/profileicon"
                    app:layout_constraintBottom_toBottomOf="@+id/rgUnity"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/editLabel2"/>

                <TextView
                    android:id="@+id/editLabel2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:text="Venda Unitária"
                    android:fontFamily="@font/arista_pro_bold"
                    android:textSize="30sp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/unityIcon"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioGroup
                    android:id="@+id/rgUnity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/editLabel2"
                    app:layout_constraintTop_toBottomOf="@+id/editLabel2">

                    <RadioButton
                        android:id="@+id/unityRadio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/containerretangle"
                        android:text="Unitária"
                        android:fontFamily="@font/arista_pro_light"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <RadioButton
                        android:id="@+id/kgRadio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Kilograma"
                        android:fontFamily="@font/arista_pro_light"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:background="@drawable/containerretangle"
                        android:layout_weight="1"/>

                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/constraintLayout2">

                <ImageView
                    android:id="@+id/pTypeIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/profileicon"
                    app:layout_constraintBottom_toBottomOf="@+id/rvProductsType"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/editLabel4"/>

                <TextView
                    android:id="@+id/editLabel4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:text="Tipo de produto"
                    android:fontFamily="@font/arista_pro_bold"
                    android:textSize="30sp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/pTypeIcon"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvProductsType"
                    android:layout_width="0dp"
                    android:layout_height="500dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="15dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/arista_pro_light"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:background="@drawable/containerretangle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/editLabel4"
                    app:layout_constraintTop_toBottomOf="@+id/editLabel4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/priceIcon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/profileicon"
                    app:layout_constraintBottom_toBottomOf="@+id/price"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/editLabel4"/>

                <TextView
                    android:id="@+id/editLabel4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:text="Preço (PVP)"
                    android:fontFamily="@font/arista_pro_bold"
                    android:textSize="30sp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/priceIcon"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="15dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/arista_pro_light"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:background="@drawable/containerretangle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/editLabel4"
                    app:layout_constraintTop_toBottomOf="@+id/editLabel4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/priceIcon2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/profileicon"
                    app:layout_constraintBottom_toBottomOf="@+id/priceLow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/editLabel6"/>

                <TextView
                    android:id="@+id/editLabel6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:text="Preço Revenda"
                    android:fontFamily="@font/arista_pro_bold"
                    android:textSize="30sp"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/priceIcon2"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/priceLow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="15dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:fontFamily="@font/arista_pro_light"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:background="@drawable/containerretangle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/editLabel6"
                    app:layout_constraintTop_toBottomOf="@+id/editLabel6" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <Button
                    android:id="@+id/addProductBt"
                    android:layout_width="400dp"
                    android:layout_height="100dp"
                    android:background="@drawable/blue_button"
                    android:fontFamily="@font/arista_pro_bold"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:text="Adicionar Produto"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"/>
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout >
