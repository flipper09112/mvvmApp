<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/saveOrderButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:autoSizeMaxTextSize="35sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider29"
        app:layout_constraintTop_toBottomOf="@+id/divider32" />

    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/nome"
        android:layout_toEndOf="@+id/despesa"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="50sp"
        android:onClick="chooseDate"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/divider27"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider31"
        app:layout_constraintTop_toBottomOf="@+id/divider30" />

    <TextView
        android:id="@+id/despesa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/nome"
        android:layout_toEndOf="@+id/imageView3"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="50sp"
        android:gravity="center"
        android:text="Encomenda para dia"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/divider27"
        app:layout_constraintEnd_toStartOf="@+id/divider31"
        app:layout_constraintStart_toEndOf="@+id/divider28"
        app:layout_constraintTop_toBottomOf="@+id/divider30"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/nome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView3"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/divider30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider28"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider27"
        android:layout_width="729dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <View
        android:id="@+id/divider28"
        android:layout_width="1dp"
        android:layout_height="409dp"
        android:visibility="invisible"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider29"
        android:layout_width="1dp"
        android:layout_height="409dp"
        android:visibility="invisible"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider30"
        android:layout_width="729dp"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/divider27"
        app:layout_constraintEnd_toEndOf="@+id/nome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider31"
        android:layout_width="1dp"
        android:layout_height="409dp"
        android:background="?android:attr/listDivider"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider28"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        android:src="@drawable/ic_delivery"
        app:layout_constraintBottom_toTopOf="@+id/divider27"
        app:layout_constraintEnd_toStartOf="@+id/divider28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider32"
        android:layout_width="729dp"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/saveOrderButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider27" />

    <View
        android:id="@+id/divider36"
        android:layout_width="729dp"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/divider32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider27" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Configurações"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:textAlignment="center"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/divider36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider29"
        app:layout_constraintTop_toBottomOf="@+id/divider27" />

    <RadioGroup
        android:id="@+id/radioGroupEncomenda"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/divider32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider29"
        app:layout_constraintTop_toBottomOf="@+id/divider36">

        <RadioButton
            android:id="@+id/r_total"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:elevation="5dp"
            android:layout_marginLeft="50dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:text="Encomenda Total" />

        <RadioButton
            android:id="@+id/r_parcial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:text="Encomenda Extra" />
    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/divider29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider27">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/addProduct"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Adicionar Produto"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/divider29"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>