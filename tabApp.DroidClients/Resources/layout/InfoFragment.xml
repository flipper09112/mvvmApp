<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/cinza"
    android:layout_height="match_parent">

    <View
        android:id="@+id/divider6"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <View
        android:id="@+id/divider7"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider6"
        app:layout_constraintVertical_bias="0.3" />

        <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Contactos:"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:background="@color/cinza"
        android:textColor="@android:color/holo_red_dark"
        android:fontFamily="@font/arista_pro_bold"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/divider7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider6" />

    <View
        android:id="@+id/divider8"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider7" />

    <View
        android:id="@+id/divider9"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider7" />

    <TextView
        android:layout_margin="20sp"
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Manuela"
        android:autoSizeTextType="uniform"
        android:background="@color/cinza"
        android:fontFamily="@font/arista_pro_light"
        android:gravity="center"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/divider8"
        app:layout_constraintEnd_toStartOf="@+id/divider9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider7" />

    <TextView
        android:layout_margin="20sp"
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Filipe"
        android:autoSizeTextType="uniform"
        android:background="@color/cinza"
        android:fontFamily="@font/arista_pro_light"
        android:gravity="center"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/divider9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider8" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_margin="20sp"
        android:id="@+id/button_manuela"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Ligar"
        android:textAllCaps="false"
        android:autoSizeTextType="uniform"
        android:paddingLeft="20sp"
        android:drawableLeft="@drawable/ic_baseline_call_24"
        android:textColor="@color/white"
        android:fontFamily="@font/arista_pro_bold"
        android:background="@drawable/call_button"
        app:layout_constraintBottom_toTopOf="@+id/divider8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider9"
        app:layout_constraintTop_toBottomOf="@+id/divider7" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_margin="20sp"
        android:id="@+id/button_filipe"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Ligar"
        android:textAllCaps="false"
        android:autoSizeTextType="uniform"
        android:paddingLeft="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/arista_pro_bold"
        android:drawableLeft="@drawable/ic_baseline_call_24"
        android:background="@drawable/call_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider9"
        app:layout_constraintTop_toBottomOf="@+id/divider8" />

    <View
        android:id="@+id/divider10"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/divider6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Informação"
        android:elevation="10sp"
        android:background="@color/logo_color_green_plus"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/arista_pro_bold"
        app:layout_constraintBottom_toTopOf="@+id/divider10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:background="@color/cinza"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/arista_pro_light"
        android:scrollbars = "vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Efetuamos entregas ao domicilio de produtos de padaria, pastelaria e afins nas seguintes localidades:\n-Fontão\n-Lanheses\n-Meixedo\n-Nogueira\n-Vilar de Murteda\n-Amonde\n-S.Lourenço\n-Dem\n-Gondar\n-Orbacém\n-Outeiro\n-Freixieiro de Soutelo\n-Riba de Âncora\n-Vile\n-Âncora"
        app:layout_constraintBottom_toTopOf="@+id/divider6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider10" />
</androidx.constraintlayout.widget.ConstraintLayout>